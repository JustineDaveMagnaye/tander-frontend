{
  "expo": {
    "name": "TANDER",
    "slug": "tander",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#F97316"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tander.app",
      "bitcode": false,
      "googleServicesFile": "./GoogleService-Info.plist",
      "infoPlist": {
        "NSFaceIDUsageDescription": "TANDER uses Face ID for quick and secure sign-in.",
        "UIBackgroundModes": [
          "voip",
          "audio",
          "fetch",
          "remote-notification"
        ]
      }
    },
    "android": {
      "minSdkVersion": 26,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#F97316"
      },
      "package": "com.tander.app",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.CAMERA",
        "android.permission.INTERNET",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.RECORD_AUDIO",
        "android.permission.SYSTEM_ALERT_WINDOW",
        "android.permission.WAKE_LOCK",
        "android.permission.BLUETOOTH",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.READ_PHONE_STATE",
        "android.permission.CALL_PHONE",
        "android.permission.BIND_TELECOM_CONNECTION_SERVICE",
        "android.permission.FOREGROUND_SERVICE_PHONE_CALL"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "./plugins/withNetworkSecurityConfig",
      "./plugins/withCallKeep",
      "./plugins/withVoipPushNotification",
      "expo-font",
      [
        "expo-screen-orientation",
        {
          "initialOrientation": "PORTRAIT"
        }
      ],
      "@react-native-community/datetimepicker",
      "@config-plugins/react-native-webrtc",
      [
        "expo-notifications",
        {
          "color": "#F97316",
          "defaultChannel": "tander_incoming_calls",
          "enableBackgroundRemoteNotifications": true
        }
      ],
      "expo-secure-store",
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "TANDER uses Face ID for quick and secure sign-in."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "1f156cdd-8c3d-484f-99f4-d62eb54f06e1"
      }
    }
  }
}
